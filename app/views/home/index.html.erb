    <style>
        
        .menu {
            height: 63.6%;
            width: 90px;
            position: fixed;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            white-space: nowrap;
            z-index: 1;
            background-color: #111;
            
        }
        
        .menu a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            display: block;
            transition: 0.3s;
            font-size: 22px;
            color: #818181;
        }
        
        .menu a:hover {
            color: #f1f1f1;
        }
        
        .material-icons {
            padding-bottom: 3px;
        }
        
        .material-icons,
        .icon-text {
            vertical-align: middle;
        }
        
        #main {
            transition: margin-left .5s;
            padding: 16px;
            margin-left: 90px;
        }

        #boox{
            transition: margin-left .5s;
            padding: 16px;
            margin-left: 90px;
            background-color: white;
            position:absolute;
            width: 260px;
            height: 100px;
            top: -10px;
            left: -30px;
            z-index: -1;
            filter: blur(60px);
            -webkit-filter: blur(60px);

        }

        p{
            font-size: 16px;
            font-weight: bold;
        }
        
        @media screen and (max-height: 450px) {
            .menu {
                padding-top: 15px;
            }
            .menu a {
                font-size: 18px;
            }
        }
    </style>
</head>

<body>

    <div id="myMenu" class="menu" onmouseover="toggleMenu()" onmouseout="toggleMenu()">
        <div class="logo">
        <h6 class="text-white h3" style="position:relative; left: 80px; top: 12px;">Pixela</h6>
        </div>
        <a href="#"><i class="material-icons">account_circle</i><span class="icon-text"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Account</a></span>
        </a><br>
        <a href="#"><i class="material-icons">shopping_cart</i><span class="icon-text"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Cart</span></a><br>
        <a href="#"><i class="material-icons">email</i><span class="icon-text"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Contact<span></a>
    </div>

    <div id="boox"></div>
    <div id="main">
        <h2>Pixela</h2>
        <p>For nostalgic memories.</p>
    </div>

    <script>
        var mini = true;

        function toggleMenu() {
            if (mini) {
                console.log("opening menu");
                document.getElementById("myMenu").style.width = "250px";
                document.getElementById("main").style.marginLeft = "250px";
                document.getElementById("boox").style.marginLeft = "250px";
                this.mini = false;
            } else {
                console.log("closing menu");
                document.getElementById("myMenu").style.width = "90px";
                document.getElementById("main").style.marginLeft = "90px";
                document.getElementById("boox").style.marginLeft = "90px";
                this.mini = true;
            }
        }
    </script>

</body>

